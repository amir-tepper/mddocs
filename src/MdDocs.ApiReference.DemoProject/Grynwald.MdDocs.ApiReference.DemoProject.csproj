<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <AssemblyName>DemoProject</AssemblyName>
    <RootNamespace>DemoProject</RootNamespace>
    <DocumentationFile>$(AssemblyName).xml</DocumentationFile>
    <IsPackable>false</IsPackable>
    <AssemblyVersion>1.2.3</AssemblyVersion>
    <Version>1.2.3</Version>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Remove="Nerdbank.GitVersioning" />
  </ItemGroup>

  <Target Name="UpdateDocs" AfterTargets="AfterBuild">
    <PropertyGroup>
      <MdDocsPath>$(MSBuildThisFileDirectory)..\MdDocs\Grynwald.MdDocs.csproj</MdDocsPath>
      <DocsDir>$(MSBuildThisFileDirectory)..\..\docs\api</DocsDir>
    </PropertyGroup>
    <Exec Command="dotnet run --project &quot;$(MdDocsPath)&quot; -- apireference  --assembly &quot;$(OutputPath)$(AssemblyName).dll&quot; --outdir &quot;$(DocsDir)&quot;" />
  </Target>

</Project>
